# ğŸ† Titanic Gauntlet v2.6.0 - Docker Edition
# Quick commands for running Council evaluation suites

# Default values
BUDGET ?= 10
COUNCIL_URL ?= http://localhost:9000

# Environment setup
.PHONY: setup-env
setup-env:
	@echo "ğŸ”§ Setting up Titanic Gauntlet environment..."
	@mkdir -p reports
	@echo "âœ… Reports directory created"

# Health check
.PHONY: health
health:
	@echo "ğŸ¥ Checking Council API health..."
	@curl -f $(COUNCIL_URL)/health || echo "âŒ Council API not responding"

# Quick smoke test - 50 prompts (â‰ˆ3 min)
.PHONY: micro
micro: setup-env
	@echo "ğŸš€ Running Micro Suite (50 prompts, ~3 min)"
	python scripts/run_titanic_gauntlet_docker.py \
		--suite micro \
		--budget 2 \
		--council-url $(COUNCIL_URL) \
		--report reports/micro_$(shell date +%Y%m%d_%H%M).json

# Full Titanic Gauntlet - 380 prompts (â‰ˆ25 min)
.PHONY: titanic
titanic: setup-env
	@echo "ğŸ† Running Full Titanic Gauntlet (380 prompts, ~25 min)"
	python scripts/run_titanic_gauntlet_docker.py \
		--suite full \
		--budget $(BUDGET) \
		--council-url $(COUNCIL_URL) \
		--report reports/titanic_full_$(shell date +%Y%m%d_%H%M).json

# Custom budget run
.PHONY: titanic-budget
titanic-budget: setup-env
	@echo "ğŸ† Running Titanic with budget $$(BUDGET)"
	python scripts/run_titanic_gauntlet_docker.py \
		--suite full \
		--budget $(BUDGET) \
		--council-url $(COUNCIL_URL)

# Start Council stack
.PHONY: start-council
start-council:
	@echo "ğŸš€ Starting Council stack..."
	docker-compose up -d council-api prometheus grafana

# Stop Council stack  
.PHONY: stop-council
stop-council:
	@echo "ğŸ›‘ Stopping Council stack..."
	docker-compose down

# View latest report
.PHONY: latest-report
latest-report:
	@echo "ğŸ“Š Latest Titanic report:"
	@ls -t reports/titanic_*.json | head -1 | xargs cat | python -m json.tool

# Clean up old reports (keep last 10)
.PHONY: clean-reports
clean-reports:
	@echo "ğŸ§¹ Cleaning old reports (keeping last 10)..."
	@ls -t reports/titanic_*.json | tail -n +11 | xargs rm -f
	@echo "âœ… Cleanup complete"

# Complete workflow: start â†’ test â†’ report
.PHONY: full-workflow
full-workflow: start-council health micro titanic latest-report
	@echo "ğŸ‰ Full Titanic workflow complete!"

