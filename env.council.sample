# AutoGen Council Environment Configuration
# Copy to .env to enable the five-voice Council system

# 🌌 Enable Council-first routing
SWARM_COUNCIL_ENABLED=true

# 💰 Budget controls
COUNCIL_MAX_COST=0.30
COUNCIL_DAILY_BUDGET=5.00
SWARM_CLOUD_BUDGET_USD=10.00

# 🔑 API Keys (configure these for cloud voices)
# OPENAI_API_KEY=your_key_here
# MISTRAL_API_KEY=your_key_here

# 📝 Scratchpad configuration
SESSION_ID=default_session

# 🔧 Model endpoints
LLM_ENDPOINT=http://localhost:8000/v1
MODEL_NAME=gpt-3.5-turbo
CLOUD_ENABLED=true

# 🎯 Voice model overrides (optional)
COUNCIL_REASON_MODEL=mistral_7b_instruct
COUNCIL_SPARK_MODEL=mistral_medium_cloud
COUNCIL_EDGE_MODEL=gpt4o_mini_cloud
COUNCIL_HEART_MODEL=codellama_0.7b
COUNCIL_VISION_MODEL=phi2_2.7b 